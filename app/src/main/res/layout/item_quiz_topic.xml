<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/quiz_week"
                android:maxLines="2"
                android:text="Week 1"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_toEndOf="@id/quiz_week"
                android:layout_width="1dp"
                android:layout_centerVertical="true"
                android:layout_height="35dp"
                android:background="@color/flat_grey_dark_1" />
            <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/quiz_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/quiz_topic"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Engineering Valuation"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/quiz_subtopics"
                    android:layout_margin="2dp"
                    android:text="Principles of valuation"
                    android:layout_below="@id/quiz_topic"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    />
            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>