<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="3dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                android:layout_margin="12dp"
                app:shape_mode="round_rect"
                app:round_radius="20dp"
                android:layout_weight="2"
                android:src="@color/primaryText"
                android:id="@+id/campus_news_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="1dp"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:text="Campus News Title"
                        android:id="@+id/campus_news_title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginEnd="2dp"
                        android:maxLines="3"
                        android:layout_gravity="start"
                        android:layout_marginBottom="15dp"
                        android:text="Campus News Summary
asdsadasdasdasdsad dsasdsadasdasdasdas asdd asdasd asd asd sdad asdds da asdasd dasdsadad asdasd"
                        android:id="@+id/campus_news_description"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:text="By Oluwasina Marvellous"
                        android:id="@+id/campus_news_author"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:maxLines="2"
                        android:textSize="11sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/campus_news_time"
                        android:text="Mon 2020"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>